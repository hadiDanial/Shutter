        <TextBox x:Name="pathText" HorizontalAlignment="Right" Height="21" Margin="0,19,135,0" TextWrapping="Wrap" Text="K:\Screenshots\" VerticalAlignment="Top" Width="171" UndoLimit="98" IsEnabled="False" TextChanged="pathText_TextChanged"/>

    </Grid>
