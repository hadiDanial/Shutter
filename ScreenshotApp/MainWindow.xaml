        <Button x:Name="ScreenshotBtn" MinHeight="35"  Width="120" Content="Take Screenshot" HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="10,10,0,0" Click="ScreenshotBtn_Click"/>
